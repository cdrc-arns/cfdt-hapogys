<div class="form-container">
  <%= simple_form_for(@article) do |f| %>:
    <div class="form-content">
      <div class="form-input">
        <%= f.input :title,
                      autofocus: true %>
      </div>

      <div class="form-input">
        <%= f.input :description,
                      autofocus: true %>
      </div>

      <div class="form-input">
        <%= f.input :image, as: :file, label: "Ajouter une image" %>
      </div>

      <div class="form-input">
        <%= f.input :document, as: :file, label: "Ajouter un document" %>
      </div>

      <div class= "form-button">
        <%= f.button :submit, "Valider", class: "form-button-text"%>
      </div>
    </div>
  <% end %>
</div>
